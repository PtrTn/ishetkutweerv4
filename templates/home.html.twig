{% extends 'base.html.twig' %}

{% block title %}
    Is het kut weer?
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <div class="container pt-4">
            <div class="row w-100 bg-primary text-light p-4 no-gutters">
                <div class="row w-100 justify-content-between">
                    <div class="col-12 col-sm-7">
                        <h2 class="text-center text-sm-left">{{ data.rating|formatRating }}</h2>
                    </div>
                    <div class="col-12 col-sm-5 pull-right d-none d-sm-block">
                        <h3 class="text-right">{{ location.region|capitalize }}</h3>
                        <h4 class="text-right">{{ data.date|date('H:i') }}</h4>
                    </div>
                </div>
                <div class="row w-100 mt-4">
                    <div class="col-12">
                        <h3 class="text-center">*Wolkje hier*</h3>
                        <h4 class="text-center mt-3">{{ data.summary }}</h4>
                    </div>
                </div>
            </div>
            <div class="row bg-white w-100 p-4 no-gutters">
                <div class="col-6 col-md-2 d-flex flex-column text-center justify-content-around">
                    <h1>{{ data.temperature }}&deg;</h1>
                    <p>{{ data.date|localizeddate('full', 'none', 'nl', null, 'EEEE dd MMMM')|capitalize }}</p>
                </div>
                <div class="col-6 col-md-2 d-flex flex-column text-center justify-content-around">
                    <p>*Wolkje hier*</p>
                    <p>{{ data.windSpeed }} bft.</p>
                    <p>{{ data.rain ?? '0' }} mm/u</p>
                </div>
                <div class="col-12 col-md-8 d-flex flex-column flex-sm-row justify-content-between pl-0 pl-md-3">
                    <div class="d-flex flex-row flex-sm-column pt-3 pt-sm-0 justify-content-between">
                        <h3>{{ forecast.day1.day|capitalize }}</h3>
                        <p>Wolkje</p>
                        <h4>{{ forecast.day1.temperature }}</h4>
                    </div>
                    <div class="d-flex flex-row flex-sm-column pt-3 pt-sm-0 justify-content-between">
                        <h3>{{ forecast.day2.day|capitalize }}</h3>
                        <p>Wolkje</p>
                        <h4>{{ forecast.day2.temperature }}</h4>
                    </div>
                    <div class="d-flex flex-row flex-sm-column pt-3 pt-sm-0 justify-content-between">
                        <h3>{{ forecast.day3.day|capitalize }}</h3>
                        <p>Wolkje</p>
                        <h4>{{ forecast.day3.temperature }}</h4>
                    </div>
                    <div class="d-flex flex-row flex-sm-column pt-3 pt-sm-0 justify-content-between">
                        <h3>{{ forecast.day4.day|capitalize }}</h3>
                        <p>Wolkje</p>
                        <h4>{{ forecast.day4.temperature }}</h4>
                    </div>
                    <div class="d-flex flex-row flex-sm-column pt-3 pt-sm-0 justify-content-between">
                        <h3>{{ forecast.day5.day|capitalize }}</h3>
                        <p>Wolkje</p>
                        <h4>{{ forecast.day5.temperature }}</h4>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}