{% extends 'base.html.twig' %}

{% block title %}
    Is het kut weer?
{% endblock %}

{% block stylesheets %}
    <link href="/build/css/styles.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container pt-4">
            <div class="row w-100 bg-secondary text-light p-4 no-gutters">
                <div class="row w-100 justify-content-between">
                    <div class="col-12 col-sm-7">
                        <h2 class="text-center text-sm-left" data-test="rating-text">Wij zijn kut</h2>
                    </div>
                    <div class="col-12 col-sm-5 pull-right d-none d-sm-block">
                        <h3 class="text-right">Onbekend</h3>
                        <h4 class="text-right">{{ "now"|date('H:i') }}</h4>
                    </div>
                </div>
                <div class="row w-100 mt-4">
                    <div class="col-12 text-center">
                        <h4 class="mt-3">Sorry, we weten even niet welk weer het is</h4>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}
